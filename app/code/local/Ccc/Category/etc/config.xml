<config>
    <modules>
        <Ccc_Category>    
            <version>1.0.0</version>
        </Ccc_Category>
    </modules>
    <frontend>
        <layout>
            <updates>
                <category module="Ccc_Category">
                    <file>category.xml</file>
                </category>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <category>
                <class>Ccc_Category_Model</class>
                <resourceModel>category_resource</resourceModel>
            </category>
            <category_resource>
                <class>Ccc_Category_Model_Resource</class>
                <deprecatedNode>category_mysql4</deprecatedNode>
                <entities>
                    <category>
                        <table>category</table>
                    </category>
                </entities>
            </category_resource>
        </models>
        <resources>
            <category_setup>
                <setup>
                    <module>Ccc_Category</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </category_setup>
            <category_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </category_write>
            <category_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </category_read>
        </resources>
        <blocks>
            <category>
                <class>Ccc_Category_Block</class>
            </category>
        </blocks>
        <helpers>
           <category>
                  <class>Ccc_Category_Helper</class>
            </category>
        </helpers>
    </global>
    <admin>
        <routers>
            <category>
                <use>admin</use>
                <args>
                    <module>Ccc_Category</module>
                    <frontName>category</frontName>
                </args>
            </category>
        </routers>
         <layout>
            <updates>
                <category>
                    <file>category.xml</file>
                </category>
            </updates>
        </layout>
    </admin>
</config>