<?xml version="1.0"?>
<config>
    <modules>
        <Yagnik_Brand>    
            <version>1.0.2</version>
        </Yagnik_Brand>
    </modules>
    <frontend>
        <routers>
            <brand>
                <use>standard</use>
                <args>
                    <module>Yagnik_Brand</module>
                    <frontName>brand</frontName>
                </args>
            </brand>
        </routers>
        <layout>
            <updates>
                <brand module="Yagnik_Brand">
                    <file>brand.xml</file>
                </brand>
            </updates>
        </layout>
    </frontend>
    <global>
        <resources>
            <brand_setup>
                <setup>
                    <module>Yagnik_Brand</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </brand_setup>
            <brand_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </brand_write>
            <brand_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </brand_read>
        </resources>
        <fieldsets>
            <catalog_product>
                <brand>
                    <brand_attribute>
                        <is_global>0</is_global>
                        <frontend_input>select</frontend_input>
                        <frontend_label>Brand Attribute</frontend_label>
                        <source_model>yagnik_brand/source_model</source_model>
                        <backend_type>int</backend_type>
                        <is_required>0</is_required>
                        <apply_to>simple,configurable,virtual,bundle,downloadable</apply_to>
                    </brand_attribute>
                </brand>
            </catalog_product>
        </fieldsets>
        <models>
            <brand>
                <class>Yagnik_Brand_Model</class>
                <resourceModel>brand_resource</resourceModel>
            </brand>
            <brand_resource>
                <class>Yagnik_Brand_Model_Resource</class>
                <deprecatedNode>brand_mysql4</deprecatedNode>
                <entities>
                    <brand>
                        <table>brand</table>
                    </brand>
                </entities>
            </brand_resource>
        </models>
        <blocks>
            <brand>
                <class>Yagnik_Brand_Block</class>
            </brand>
        </blocks>
        <helpers>
            <brand>
                <class>Yagnik_Brand_Helper</class>
            </brand>
        </helpers>
    </global>
    <admin>
        <routers>
            <brand>
                <use>admin</use>
                <args>
                    <module>Yagnik_Brand</module>
                    <frontName>brand</frontName>
                </args>
            </brand>
        </routers>
    </admin>
</config>
